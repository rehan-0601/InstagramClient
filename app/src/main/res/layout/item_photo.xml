<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="center"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLocation"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true" />

    <ImageView

        android:adjustViewBounds="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivProfPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp"
        android:layout_above="@+id/ivPhoto" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:text="username"
        android:ellipsize="end"
        android:id="@+id/tvUsername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfPic"
        android:layout_toEndOf="@+id/ivProfPic"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="#0c3f7d" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:id="@+id/tvLocation"
        android:layout_toRightOf="@+id/ivProfPic"
        android:textStyle="bold"
        android:textColor="#1e85f6"
        android:typeface="normal"
        android:layout_below="@+id/tvUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="Time"
        android:id="@+id/tvTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Likes"
        android:drawableLeft="@drawable/heart"
        android:drawablePadding="5dp"
        android:id="@+id/tvLikes"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0c3f7d"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username caption"
        android:textSize="12sp"
        android:id="@+id/tvCaption"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvComment1"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tvViewAll"
        android:textSize="12sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvComment2"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tvComment1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:id="@+id/tvViewAll"
        android:layout_below="@+id/tvCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>